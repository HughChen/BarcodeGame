<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hugh.bcgame"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hugh.bcgame.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hugh.bcgame.IntermediateActivity"
            android:label="@string/intermediate"
            android:parentActivityName="com.hugh.bcgame.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hugh.bcgame.MainActivity" />
        </activity>
        <activity
            android:name="com.hugh.bcgame.FightActivity"
            android:label="@string/title_activity_fight" >
        </activity>
        <activity
            android:name="com.hugh.bcgame.BattleActivity"
            android:label="@string/title_activity_battle" >
        </activity>
        <activity
            android:name="com.hugh.bcgame.EndActivity"
            android:label="@string/title_activity_end" >
        </activity>
    </application>

</manifest>